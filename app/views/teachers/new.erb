<div>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<h1>Welcome! Please sign up below:</h1>

<form action="/teachers" method="POST">
  <label for="first_name">First Name: </label>
  <input type="text" id="first_name" name="teacher[first_name]"
  value=<%= @field_values[:first_name] if @field_values[:first_name] %>>
  <br><br>

  <label for="last_name">Last Name: </label>
  <input type="text" id="last_name" name="teacher[last_name]"
  value=<%= @field_values[:last_name] if @field_values[:last_name] %>>
  <br><br>

  <label for="username">Username: </label>
  <input type="text" id="username" name="teacher[username]"
  value=<%= @field_values[:username] if @field_values[:username] %>>
  <br><br>

  <label for="password">Password: </label>
  <input type="password" id="password" name="teacher[password]"/>
  <br><br>

  <label for="confirm_password">Confirm Password: </label>
  <input type="password" id="confirm_password" name="password[confirm]"/>
  <br><br>

  <input type="submit" value="Create Account"/>
</form>