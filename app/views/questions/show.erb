<h2><%= "Information for Question ##{@question.id}" %></h2>

<h3>Question Owner:</h3>
<%= @owner.username %>

<h3>Difficulty:</h3>
<%= @difficulty %>

<h3>Prompt:</h3>
<%= @prompt %>

<h3>Topics:</h3>
<ul>
<% @topics.each do |topic| %>
  <li><a href=<%= "/topics/#{topic.id}" %>><%= "#{topic.name}" %></a></li>
<% end %>
</ul>

